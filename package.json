        "pretty-quick": "^3.1.0",
        "react-test-renderer": "^17.0.1"
    },
    "jest": {
        "coverageReporters": [
            "json-summary"
        ],
        "coveragePathIgnorePatterns": [
            "<rootDir>/src/setupTests.ts",
            "<rootDir>/src/reportWebVitals.ts",
            "<rootDir>/src/index.tsx",
            "<rootDir>/src/routes.tsx",
            "<rootDir>/src/App.tsx"
        ]
    }
}
